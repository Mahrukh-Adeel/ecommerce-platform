{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./", // legacy, will be replaced below
    "outDir": "./dist",

    /* Module + Target for Node.js (ESM style imports) */
    "module": "nodenext", 
    "target": "es2020",

    /* Node types */
    "lib": ["esnext"],
    "types": ["node"],

    /* Output Helpers */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* React Support (for TSX files in frontend) */
    "jsx": "react-jsx",

    /* Module Settings */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
